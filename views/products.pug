          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='firstname' placeholder='Eg matooke' type='text')
      // Text input
      .form-group
        label.col-md-4.control-label Name of the Ward
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='lastname' placeholder='Eg Nakasero' type='text')
     
      // Text input
      .form-group
        label.col-md-4.control-label Picture of the Product
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='username'  type='text')

        // Text input
