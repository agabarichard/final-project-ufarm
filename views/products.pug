          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='username' placeholder='Ugx'  type='text')
      // Text input
      .form-group
        label.col-md-4.control-label Date of Upload
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='dob' type='date')
      // Text input
      .form-group
        label.col-md-4.control-label Product type
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            select#batteryprice.form-select(type='text' name='gender')
                option(value='Default' selected='') Select
                option(value='Organic') Organic
                option(value='None organic') None organic
      // Text input
      .form-group
        label.col-md-4.control-label Mode of Payment
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-envelope
            select#batteryprice.form-select(type='text' name='gender')
                option(value='Default' selected='') Select
                option(value='Mobile money') Mobile money
                option(value='Cash') Cash

                // Text input
