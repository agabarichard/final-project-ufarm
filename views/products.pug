        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-envelope
            select#batteryprice.form-select(type='text' name='gender')
                option(value='Default' selected='') Select
                option(value='Pick up ') Pick up 
                option(value='Home delivery') Home delivery

      // Text input
      .form-group
        label.col-md-4.control-label Direction
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-earphone
            input.form-control(name='Direction' placeholder='Eg Cell, ward , division and district' type='text')
      
