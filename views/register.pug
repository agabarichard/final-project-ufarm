doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Register as FO
  link(rel='stylesheet' href='/signup.css')
.container
  form#contact_form.well.form-horizontal( name="signup" action='/signup' method='post')
    fieldset
      // Form Name
      legend
        center
          h2
            b Register Farmer One (FO)
      br
      // Text input
      .form-group
        label.col-md-4.control-label First Name
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='firstname' placeholder='Eg, Opio' type='text')
      // Text input
      .form-group
        label.col-md-4.control-label Last name
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='lastname' placeholder='Eg, James' type='text')
     
      // Text input
      .form-group
        label.col-md-4.control-label Unique ID
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='username'  type='text')
      // Text input
      .form-group
        label.col-md-4.control-label Date of Birth
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='dob' type='date')
            // Text input
      .form-group
        label.col-md-4.control-label Date of Registration
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(name='dor' type='date')
      // Text input
      .form-group
        label.col-md-4.control-label Gender
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            select#batteryprice.form-select(type='text' name='gender')
                option(value='Default' selected='') Select
                option(value='Male') Male
                option(value='Female') Female
      // Text input
      .form-group
        label.col-md-4.control-label Activities Involved
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-envelope
            input.form-control(name='Activities Involved' type='text')
      // Text input
      .form-group
        label.col-md-4.control-label Phone Number
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-earphone
            input.form-control(name='phonenumber' placeholder='0777770000' type='text')
      // Text input
      .form-group
        label.col-md-4.control-label NIN
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-earphone
            input.form-control(name='nin' placeholder='Eg, CM1234567890FT'   type='text')
      // Text input
      .form-group
        label.col-md-4.control-label Resident Type
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-earphone
            select#batteryprice.form-select(type='text' name='Resident Type')
                option(value='Default' selected='') Select
                option(value='S') Single
                option(value='M') Married
                option(value='D') Deforced
      // Text input
      .form-group
        label.col-md-4.control-label Direction to Home place
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-earphone
            input.form-control(name='address' placeholder='village, Ward, Division, District' type='text')
            // Text input
            .form-group
        label.col-md-4.control-label Period stayed in the Ward
        .col-md-4.inputGroupContainer
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-earphone
            input.form-control(name='Period stayed in the Ward' placeholder='Must be 10 years and above'  type='Period stayed in the Ward')
                     
      // Select Basic
      // Success message
      // <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Success!.</div>
      // Button
      .form-group
        label.col-md-4.control-label
        .col-md-4
          br
          button.btn.btn-warning(type='submit') SUBMIT
           

