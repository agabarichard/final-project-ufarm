doctype html
head
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(href='/css/style.css' rel='stylesheet')
  title Upload Products
.col-md-12
  // As a heading
  nav.navbar.navbar-dark.bg-dark
    .container-fluid
      span.navbar-brand.mb-0.h1 Urban Farmer
.container(style='margin-left: -10px;')
  .row
    .col-md-2
      .d-flex.flex-column.flex-shrink-0.p-3.bg-light(style='width: 280px; height: 700px; background: transparent;')
        a.d-flex.align-items-center.mb-3.mb-md-0.me-md-auto.link-dark.text-decoration-none(href='/')
          svg.bi.me-2(width='40' height='32')
            use(xlink:href='#bootstrap')
          // <span class="fs-4"></span>
          img(src='/images/istockphoto-1369012070-170667a.jpg' style='height: 60px;')
          span UFARM
        hr
        ul.nav.nav-pills.flex-column.mb-auto
          li.nav-item
            a.nav-link.link-dark(href='/Urbanfarmers/urbanfarmerdashb.html' aria-current='page')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#home')
              |                   HOME
          li
            a.nav-link.link-dark(href='/ufuploadedproducts')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#speedometer2')
              |                   UPLOADS
          li
            a.nav-link.link-dark.active(href='/Urbanfarmers/urbanfarmerform.html')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#table')
              |                   UPLOAD FORM
          li
            a.nav-link.link-dark(href='#')
              svg.bi.me-2(width='16' height='16')
                use(xlink:href='#grid')
              |                   WITHDRAW
        hr
        .dropdown
          a#dropdownUser2.d-flex.align-items-center.link-dark.text-decoration-none.dropdown-toggle(href='#' data-bs-toggle='dropdown' aria-expanded='false')
            img.rounded-circle.me-2(src='/images/istockphoto-1033669508-170667a.jpg' alt='' width='32' height='32')
            strong mdo
          ul.dropdown-menu.text-small.shadow(aria-labelledby='dropdownUser2')
            li
              a.dropdown-item(href='#') New project
            li
              a.dropdown-item(href='#') Settings
            li
              a.dropdown-item(href='#') Profile
            li
              hr.dropdown-divider
            li
              a.dropdown-item(href='/landingpage.html') Sign out
    .col-md-10
      .container-fluid.form-style(style='margin-left: 150px;')
        // <div class="logo-div"><img class="user-logo mb-2" src="../images/logo.png" alt="Ufarm logo" /></div>
        form.row.g-3
          h5.text-muted.text-center Upload Products
          .col-md-6
            p Drag your product image here;
            label.form-label(for='customFile')
            input#customFile.form-control(type='file')
            .col-md-6
              label.form-label(for='address') Unit Price
              input.form-control(type='number' name='Unitprice' placeholder='UGX')
            .col-md-6
              label.form-label(for='contact') Productname
              input.form-control(type='text' name='Productname')
            .col-md-6
              label.form-label(for='contact') ward name
              select#ward(name='ward')
                option Select a ward
                option Ward 1
                option Ward 2
                option Ward 3
                option Ward 4
            .col-md-6
              label.form-label(for='contact') Mode of Payment
              // <input type="text" class="form-control" name="ModeofPayment">
              select#ModeofPayment(name='ModeofPayment')
                option Select Payment Method
                option Cash
                option Mobile money
            .col-md-6
              label.form-label(for='contact') Mode of Delivery
              select#ModeofDelivery(name='ModeofDelivery')
                option Select Delivery Mode
                option pick up
                option Home Delivery
            .col-md-6
              label.form-label(for='contact') Directions
              input.form-control(type='text' name='Directions')
            .col-md-6
              label.form-label(for='contact') Produce Type
              select#ProduceType(name='ProduceType')
                option Select ProduceType
                option Organic
                option Non Organic
            .col-12(style='margin-top: 10px;')
              button.btn.btn-success(type='submit') UPLOAD
    // Option 1: Bootstrap Bundle with Popper
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
    script(src='/js/bootstrap.js')
